procedimento soma(a,b:inteiro)
var
aux:inteiro
inicio
aux <- a+b
res <- aux
fimprocedimento

procedimento sub(a,b:inteiro)
var
aux:inteiro
inicio
aux <- a-b
res <- aux
fimprocedimento

procedimento multi(a,b:inteiro)
var
 aux:inteiro
inicio
 aux <- a * b
 res <- aux
fimprocedimento

procedimento divisao(a,b:inteiro)
var
aux:inteiro
inicio
aux <- a\b
res <- aux
fimprocedimento

Var
// Seção de Declarações das variáveis 
res, a, b: inteiro
num: inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
escreva ("Digite um número: ")
         leia (a)
escreva ("Digite outro número: ")
         leia (b)
escreval ("------------")
         escreval ("Resuldado da soma: ")
soma (a,b)
         escreval (res)
escreval ("------------")
         escreval ("Continuando procedimento")
         escreval ("Resultado da subtração: ")
sub (a,b)
         escreval (res)
escreval ("------------")
         escreval ("Continuando procedimento")
         escreval ("Resultado da multiplicação: ")
multi (a,b)
         escreval (res)
escreval ("------------")
         escreval ("Continuando procedimento")
         escreval ("Resultado da divisão: ")
divisao (a,b)
         escreval (res)
escreval ("------------")
Fimalgoritmo
